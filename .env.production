# Production Environment Configuration
# Copy this to .env for local development

# Application
VITE_APP_NAME=Rencam
VITE_APP_VERSION=1.0.0
VITE_APP_ENV=production

# API Configuration (when backend is ready)
VITE_API_URL=https://api.rencam.com
VITE_API_TIMEOUT=30000

# Database (PostgreSQL - for backend)
DATABASE_URL=postgresql://user:password@localhost:5432/rencam_db
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=20

# Redis (for caching - when backend is ready)
REDIS_URL=redis://localhost:6379
REDIS_TTL=3600

# Authentication
VITE_JWT_SECRET=your-super-secret-jwt-key-change-in-production
VITE_SESSION_TIMEOUT=3600000

# Logging
VITE_LOG_LEVEL=info
VITE_ENABLE_ANALYTICS=true

# Feature Flags
VITE_ENABLE_REGISTRATION=true
VITE_ENABLE_PAYMENTS=true
VITE_ENABLE_NOTIFICATIONS=true

# Payment Gateway (Razorpay for India)
VITE_RAZORPAY_KEY_ID=your_razorpay_key_id
VITE_RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# Email Service (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@rencam.com
SMTP_PASSWORD=your_smtp_password

# SMS Service (for OTP)
SMS_PROVIDER=twilio
SMS_API_KEY=your_sms_api_key
SMS_API_SECRET=your_sms_api_secret

# Storage (for images)
STORAGE_PROVIDER=aws_s3
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=rencam-images
AWS_REGION=ap-south-1

# Monitoring
SENTRY_DSN=your_sentry_dsn
SENTRY_ENVIRONMENT=production

# Security
VITE_ENABLE_RATE_LIMITING=true
VITE_MAX_LOGIN_ATTEMPTS=5
VITE_LOCKOUT_DURATION=900000
